<h1>Listing products</h1>
<table border="1">
  <tr>
    <th>Product code</th>
    <th>Name</th>
    <th>Price</th>
  </tr>
  
  <% @products.each do |product| %>
    <tr>
      <td><%= product.product_code %></td>
      <td><%= product.name %></td>
      <td><%= number_to_currency(product.price) %></td>
    </tr>
  <% end %>
</table>

